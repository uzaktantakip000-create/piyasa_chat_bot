[flake8]
# Flake8 configuration for piyasa_chat_bot

# Maximum line length
max-line-length = 120

# Complexity threshold
max-complexity = 15

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    htmlcov,
    .coverage,
    alembic/versions,
    migrations,
    node_modules,
    frontend/dist,
    frontend/node_modules

# Ignore specific error codes
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by black)
    E501,
    # D100: Missing docstring in public module (too strict)
    D100,
    # D104: Missing docstring in public package (too strict)
    D104,
    # D107: Missing docstring in __init__ (too strict)
    D107

# Select specific error codes to check
select =
    E,    # pycodestyle errors
    W,    # pycodestyle warnings
    F,    # pyflakes
    C,    # mccabe complexity
    B,    # bugbear
    N,    # pep8-naming

# Per-file ignores
per-file-ignores =
    __init__.py:F401,D104
    tests/*:D100,D101,D102,D103,S101
    conftest.py:D100,D103
    alembic/*:D100,D103

# Import order style
import-order-style = google
application-import-names = backend,database,schemas,security

# Docstring convention
docstring-convention = google

# Count errors
count = True

# Show source code for each error
show-source = True

# Statistics
statistics = True
