# API authentication key required by FastAPI layer and dashboard requests
API_KEY=change-me

# 32-byte key for encrypting Telegram bot tokens.
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKEN_ENCRYPTION_KEY=generate-and-replace

# OpenAI API key for LLM responses.
# Create from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=

# Database connection (SQLite for local dev, override with PostgreSQL in production)
DATABASE_URL=sqlite:///./app.db

# Optional services
REDIS_URL=redis://localhost:6379/0
LOG_LEVEL=INFO
ALLOWED_ORIGINS=http://localhost:3000

# Frontend build (Vite) consumes this value to send API key
VITE_API_KEY=change-me

# Optional extra password for the dashboard login screen. Leave empty for no password.
VITE_DASHBOARD_PASSWORD=

# LLM model override (optional)
LLM_MODEL=gpt-4o-mini
