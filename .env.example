# API authentication key required by FastAPI layer and dashboard requests
API_KEY=change-me

# 32-byte key for encrypting Telegram bot tokens.
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKEN_ENCRYPTION_KEY=generate-and-replace

# Default admin user credentials (created automatically on first startup)
# SECURITY: Password must be at least 12 characters with uppercase, lowercase, digit, and special character
# Example strong password: MySecureP@ssw0rd2024 (do NOT use this example!)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=
DEFAULT_ADMIN_ROLE=admin
DEFAULT_ADMIN_MFA_SECRET=
DEFAULT_ADMIN_API_KEY=

# OpenAI API key for LLM responses.
# REQUIRED: Create from: https://platform.openai.com/account/api-keys
# IMPORTANT: System will not work without a valid OpenAI API key
OPENAI_API_KEY=

# Database connection (SQLite for local dev, override with PostgreSQL in production)
DATABASE_URL=sqlite:///./app.db

# Optional services
REDIS_URL=redis://localhost:6379/0
LOG_LEVEL=INFO
ALLOWED_ORIGINS=http://localhost:3000
DASHBOARD_STREAM_INTERVAL=5
# Leave empty for infinite stream in production; set to a positive integer for test automation.
DASHBOARD_STREAM_MAX_MESSAGES=

# Telegram API retry configuration (exponential backoff for rate limiting and errors)
TELEGRAM_MAX_RETRIES=5
TELEGRAM_BASE_DELAY=1.0
TELEGRAM_MAX_DELAY=60.0
TELEGRAM_TIMEOUT=20
# Counter flush settings (batches metric updates to database)
TELEGRAM_COUNTER_FLUSH_INTERVAL=5.0
TELEGRAM_COUNTER_FLUSH_THRESHOLD=10

# Frontend build (Vite) consumes this value to send API key
VITE_API_KEY=change-me

# Optional extra password for the dashboard login screen. Leave empty for no password.
VITE_DASHBOARD_PASSWORD=

# LLM Provider Selection (openai, gemini, veya groq)
LLM_PROVIDER=openai

# OpenAI configuration (eğer LLM_PROVIDER=openai ise)
LLM_MODEL=gpt-4o-mini

# Google Gemini API Key (eğer LLM_PROVIDER=gemini ise)
# API Key almak için: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Groq API Key (eğer LLM_PROVIDER=groq ise)
# API Key almak için: https://console.groq.com/keys
# ÜCRETSİZ ve ÇOK HIZLI! (saniyede 300+ token)
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile
